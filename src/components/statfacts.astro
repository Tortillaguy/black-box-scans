---
const { title, subtitle, stat } = Astro.props;
---

<style>
  .stat-facts {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    text-align: left;
    background: #fff;
    border-radius: 10px;
    box-shadow: 0px 4px 8px 1px rgba(0, 0, 0, 0.1),
      0px 1px 3px 1px rgba(0, 0, 0, 0.1);
    padding: 20px;
    flex: 1;
  }
  .stat-facts h4 {
    font-family: "IBM Plex Sans", sans-serif;
    font-weight: 600;
    font-size: 16px;
    line-height: 20px;
  }

  .stat-facts h1 {
    font-weight: 500;
    font-size: 80px;
    line-height: 96px;
    margin: 0 !important;
    color: #333333;
    letter-spacing: -3.8px;
  }

  .stat-facts h3 {
    font-family: "IBM Plex Sans", sans-serif;
    font-weight: 400;
    font-size: 14px;
    line-height: 22px;
    color: #444444;
  }
</style>
<div class="stat-facts">
  <h4><a href="/esg">{title}</a></h4>

  <h1><a href="/esg">{stat}%</a></h1>

  <h3>
    <a href="/esg">{subtitle}</a>
  </h3>
</div>
